{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "es2019",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["es2019", "dom", "es2021"],
      "types": ["node"],
      "declaration": false,
      "declarationMap": false,
      "sourceMap": false,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strict": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
    },
  
    "files": ["src/core/index.ts"],
  
    "include": ["./src/","__type__"],
  
    "exclude": ["node_modules", "src/core/templates"]
  }
  